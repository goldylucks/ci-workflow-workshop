{
  "scripts": {
    "start": "yarn dev:start",
    "dev:wds": "webpack-dev-server --progress",
    "dev:start": "nodemon src/server --ignore lib --ignore dist --ignore client --exec babel-node",
    "prod:build": "yarn rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress",
    "prod:start": "cross-env NODE_ENV=production node lib/server",
    "heroku-postbuild": "yarn prod:build",
    "ut": "jest '\\.ut\\.js$' testMatch src",
    "e2e:ui": "nightwatch -e chrome",
    "e2e:server": "jest server/**/*.e2e.js --runInBand --forceExit",
    "lint": "eslint src/**/*.js webpack.config.babel.js",
    "lintstyle": "stylelint 'web/**/*.css'",
    "lint-staged": "lint-staged"
  },
  "git": {
    "scripts": {
      "pre-commit": "yarn lint-staged && yarn flow && yarn ut",
      "pre-push": "yarn lint && yarn prod:build"
    }
  },
  "lint-staged": {
    "src/**/*.css": "stylelint",
    "src/**/*.js": "eslint",
    "webpack.config.babel.js": "eslint"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "chromedriver": "^2.29.2",
    "colors": "^1.1.2",
    "cross-env": "^5.0.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.46.0",
    "git-scripts": "^0.2.1",
    "jest": "^20.0.3",
    "lint-staged": "^3.4.0",
    "nightwatch": "^0.9.16",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "selenium-server-standalone-jar": "^3.4.0",
    "stylelint": "^7.11.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.5.0",
    "supertest": "^3.0.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "deasync": "^0.1.9",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "mongoose": "^4.9.1",
    "morgan": "^1.8.1"
  }
}
